<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.IndexServlet</servlet-class>
  </servlet>
 <servlet>
    <servlet-name>CreateTopTeamServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.CreateTopTeamServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>AssignStudentServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.AssignStudentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateSubTeamServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.CreateSubTeamServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.AddNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SignInServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.SignInServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.ForgotPasswordServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StudentViewServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.StudentViewServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TeamViewServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.TeamViewServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminViewServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.AdminViewServlet</servlet-class>
  </servlet>
  
  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.ajax.AddNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.CapstoneActivityTracker.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateTopTeamServlet</servlet-name>
    <url-pattern>/createTopTeam</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AssignStudentServlet</servlet-name>
    <url-pattern>/assignStudent</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateSubTeamServlet</servlet-name>
    <url-pattern>/createSubTeam</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddNumbersServlet</servlet-name>
    <url-pattern>/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignInServlet</servlet-name>
    <url-pattern>/signIn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/signUp</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <url-pattern>/passForgot</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudentViewServlet</servlet-name>
    <url-pattern>/studentView</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>TeamViewServlet</servlet-name>
    <url-pattern>/teamView</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminViewServlet</servlet-name>
    <url-pattern>/adminView</url-pattern>
  </servlet-mapping>
  
  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <url-pattern>/ajax/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
